<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/general.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/general.js" />
	</scripts>
	<Panel class="GeneralPanel">
		<Button id="GeneralButton"
				onmouseover="GeneralShowTooltip()"
				onmouseout="GeneralHideTooltip()"
				oncontextmenu="BuyGeneral()">
			<Label hittest="false" class="Stock" id="GeneralStock" />
			<Panel hittest="false" id="GeneralCost">
				<Label hittest="false" class="Cost" id="GeneralGoldCost" />
				<Label hittest="false" class="Cost" id="GeneralLumberCost" />
			</Panel>
			<Image hittest="false" id="GeneralImage" />
			<Panel id="GeneralBorder" >
				<Panel id="Cooldown">
					<Panel id="CooldownOverlay" />
					<Label id="CooldownTimer" />
				</Panel>
			</Panel>
		</Button>
	</Panel>
</root>
